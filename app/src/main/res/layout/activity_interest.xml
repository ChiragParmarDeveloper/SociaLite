                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="107dp" />

                    <CheckBox
                        android:id="@+id/checkbox_motivation"
                        style="@style/CustomCheckbox02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:padding="16dp"
                        android:text="Motivation and Inspiration"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="107dp" />

                    <CheckBox
                        android:id="@+id/checkbox_language"
                        style="@style/CustomCheckbox02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:padding="16dp"
                        android:text="Language and Culture"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="107dp" />

                    <Button
                        android:id="@+id/btn_done"
                        android:layout_width="115dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/btn_done" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>