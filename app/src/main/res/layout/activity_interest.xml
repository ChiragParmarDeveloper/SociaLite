                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:padding="16dp"
                        android:text="Action Drama &amp; Cinema"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="107dp" />

                    <CheckBox
                        android:id="@+id/checkbox_news"
                        style="@style/CustomCheckbox02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:padding="16dp"
                        android:text="News &amp; Politics"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="107dp" />

                    <CheckBox
                        android:id="@+id/checkbox_adventure"
                        style="@style/CustomCheckbox02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:padding="16dp"
                        android:text="Adventure &amp; Travel"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="107dp" />


                    <CheckBox
                        android:id="@+id/checkbox_fashion"
                        style="@style/CustomCheckbox02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:padding="16dp"
                        android:text="Fashion &amp; Beauty"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="107dp" />

                    <CheckBox
                        android:id="@+id/checkbox_health"
                        style="@style/CustomCheckbox02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:padding="16dp"
                        android:text="Health &amp; Fitness"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="107dp" />

                    <CheckBox
                        android:id="@+id/checkbox_technology"
                        style="@style/CustomCheckbox02"
